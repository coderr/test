<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
        {% endblock %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <!--[if lte IE 8]>
                <script type="text/javascript" src="{{ asset('js/html5.js') }}"></script>
        <![endif]-->
    </head>
    <body>
        <div class="login_popup" id="login_popup">
            <form method="post" action="{{ path('FrontFrontBundle_login') }}" style="margin:0" id="global_login_form">
                <input type="text" placeholder="E-mail" name="name" style="width:150px; border:1px solid #C5C5C5; border-radius: 3px;padding:3px;margin-top:9px;font-size:12px;">
                <div style="height:10px;"></div>
                <input type="password" placeholder="Parola" name="pass" style="width:150px; border:1px solid #C5C5C5; border-radius: 3px;padding:3px;font-size:12px;margin-bottom:9px;">
                <a href="" style="font-size:12px;float:left;color:#8F8F8F;text-decoration: underline;margin-left:10px;">Ti-ai uitat parola?</a>
                <input type="button" class="rounded orange-btn" value="Logare" style="float:left;margin-left:10px;margin-top:11px;" onclick="$('#global_login_form').submit();">
            </form>
        </div>
        <!-- header -->
        <div class="header">
            <div class="centered">
                <div class="languages">
                    <a href="#" class="flag-md">MD</a>
                    <a href="#" class="flag-ru">RU</a>
                </div>
                <!-- logo -->
                <a href="{{ path('FrontFrontBundle_homepage') }}" class="logo">ENOTAR</a>
                <!-- navigation menu of the site -->
                <nav>
                    <a href="{{ path('FrontFrontBundle_homepage') }}" {% if app.request.attributes.get('_route') == 'FrontFrontBundle_homepage' %}{{ 'class="active"' }}{% endif %}>Prima</a>
                    <a href="#">Despre noi</a>
                    <a href="{{ path('FrontFrontBundle_cum_lucreaza') }}" {% if app.request.attributes.get('_route') == 'FrontFrontBundle_cum_lucreaza' %}{{ 'class="active"' }}{% endif %}>Cum lucreaza</a>
                    <a href="{{ path('FrontFrontBundle_step1') }}" {% if app.request.attributes.get('_route') == 'FrontFrontBundle_step1' %}{{ 'class="active"' }}{% endif %}>Comanda act</a>
                    <a href="#">Contacte</a>
                </nav>
                <div class="header-buttons" style="position: relative;">
                    <input type="button" class="rounded standard-btn" value="Logare" onclick="$('#login_popup').show();" />
                    <input type="button" class="rounded orange-btn" value="Inregistrare" />
                </div>
            </div>
        </div>

        <!-- content -->
        <div class="centered" style="position: relative;">
            {% block slider %}
                <div class="steps-slider">
                    <div class="steps-list">
                        <span class="step-item">1. Selectati Actele</span>
                        <span class="step-item">2. Alegeti limba</span>
                        <span class="step-item">3. Completati actul</span>
                        <span class="step-item">4. Previzualizati actul</span>
                        <span class="step-item">5. Confirmarea comenzii</span>
                    </div>
                    <div class="rounded slider-bar">
                        <div class="rounded slidebar-active slide-bar-step-{% block slider_position %}3{% endblock %}">
                            <div class="slide-bar-indicator">&nbsp;</div>
                        </div>
                    </div>
                </div>
            {% endblock %}
            {% block body %}{% endblock %}
        </div>
        {% block line %}{% endblock %}
        {% block rest %}{% endblock %}
        <!-- footer -->
        <footer>
            <div class="footer-nav">
                <div class="centered">
                    <nav>
                        <a href="#">Prima</a>
                        <a href="#">Despre noi</a>
                        <a href="#">Cum lucreaza</a>
                        <a href="#" class="active">Comanda act</a>
                        <a href="#">Contacte</a>
                    </nav>

                    <div class="follow-us">
                        Urmeaza Enotar pe: 
                        <a href="#" class="facebook">facebook</a>
                        <a href="#" class="twitter">twitter</a>
                        <a href="#" class="google">google</a>
                    </div>
                </div>
            </div>
            <div class="centered copyright">
                Realizat de Monitoring Group
                <span class="to-right">
                    Copyright &copy; 2012 www.Enotar.com Toate Drepturile Rezervate
                </span>
            </div>
        </footer>
        {% block javascripts %}{% endblock %}
    </body>
    
</html> 