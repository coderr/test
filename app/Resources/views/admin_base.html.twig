<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/admin_style.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
        {% endblock %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% if app.session.hasFlash('notice') %}
            <div class="flash-notice alert alert-success">
                {{ app.session.flash('notice') }}
            </div>
        {% endif %}
        <div style="float:left; border:1px solid grey; padding: 15px;">
            {% block left_menu %}
                <a href="{{ path('NotarNotarBunde_admin_homepage') }}">Notarii</a> 
                <br />
                <a href="{{ path('UserUserBunde_admin_homepage') }}">Utilizatori</a> 
                <br />
                <a href="javascript:;" onclick="$('#doc_submenu').toggle();">Documente</a> 
                <div style="display:none;" id="doc_submenu">
                    &nbsp;&nbsp;&nbsp;<a href="{{ path('DocDocBundle_doc_langs') }}">Limbi documente</a> 
                    <br />
                    &nbsp;&nbsp;&nbsp;<a href="{{ path('DocDocBundle_doc_categories') }}">Categorii documente</a> 
                    <br />
                    &nbsp;&nbsp;&nbsp;<a href="{{ path('DocDocBundle_doc') }}">Documente</a> 
                    <br />
                </div>
                <br />
                <a href="{{ path('UserUserBunde_admin_homepage') }}?logout=1">Iesire</a> 
                <br />
            {% endblock %}
        </div>
        {% block body %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
